
.app-container { display: flex; height: 100vh; }
.character-creator { position: absolute; top: 10px; left: 10px; background: #eee; padding: 10px; z-index: 10; }
.sidebar { width: 150px; overflow-y: auto; background: #ddd; padding: 5px; }
.story-panel { flex: 1; padding: 20px; overflow-y: auto; background: #fafafa; }
.character-card { margin: 5px; cursor: pointer; text-align: center; transition: transform 0.2s; }
.character-card:hover { transform: scale(1.1); }
.story-panel-content img { border: 1px solid #ccc; margin-top: 5px; }